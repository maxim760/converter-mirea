{
  "name": "mirea-converter",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@mui/material": "^5.10.4",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.2.1",
    "number-precision": "^1.5.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:start": "concurrently -k \"cross-env BROWSER=none yarn start\" \"yarn electron\"",
    "electron:package": "electron-builder build --win --mac -c.extraMetadata.main=build/electron.js --publish never",
    "electron": "wait-on tcp:3000 && export ELECTRON_START_URL=http://localhost:3000 && electron . --maincompanyid=apikeytest,userid=123test,userrole=role111,docid=testdoc,tableid=123,subtableid=999,recordid=rec333,ismed=1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "build": {
    "appId": "electron.com.converter-desktop",
    "mac": {
      "category": "public.app-category.business",
      "target": [
        {
          "target": "dmg",
          "arch": "x64"
        },
        {
          "target": "pkg",
          "arch": "x64"
        }
      ],
      "hardenedRuntime": false
    },
    "win": {
      "artifactName": "${productName}-${version}.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": "x64"
        }
      ]
    },
    "nsis": {
      "artifactName": "${productName}-${version}-installer.${ext}"
    },
    "directories": {
      "buildResources": "public"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/**/*"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
